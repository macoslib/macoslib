#tag Events QuickStartBTN
	#tag Event
		Sub Action(index as Integer)
		  //# Opens the corresponding QuickStart PDF file
		  
		  dim f as FolderItem
		  dim filename as string
		  
		  const filenames = "macoslib for Newbies:macoslib for Advanced Users:macoslib for Experts"
		  
		  filename = filenames.NthField( ":", index + 1 )
		  
		  dim bndl as NSBundle = NSBundle.MainBundle
		  
		  f = bndl.FileForResource( filename, "pdf" )
		  
		  if f<>nil AND f.Exists then
		    qsWindow = new QuickStartPDFWND( f )
		    
		    qsWindow.Show
		    
		  else
		    beep
		    
		  end if
		End Sub
	#tag EndEvent
#tag EndEvents
#tag Events LearnMoreBTN
	#tag Event
		Sub Action()
		  //# Opens the corresponding QuickStart PDF file
		  
		  dim f as FolderItem
		  
		  dim bndl as NSBundle = NSBundle.MainBundle
		  
		  f = bndl.FileForResource( "Macoslib Overview", "pdf" )
		  
		  if f<>nil AND f.Exists then
		    qsWindow = new QuickStartPDFWND( f )
		    
		    qsWindow.Show
		    
		  else
		    beep
		    
		  end if
		End Sub
