	#tag Event
		Sub Open()
		  nsw = New NSWindow(self)
		  
		  nsw.Center
		  nsw.AnimationBehavior = NSWindow.NSWindowAnimationBehavior.NSWindowAnimationBehaviorDocumentWindow // Zoom in slowely as if opening a document
		  
		  nsw.MovableByBackground = true
		  
		  
		End Sub
	#tag EndEvent


