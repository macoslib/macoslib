#tag Events LastChangesBTN
	#tag Event
		Sub Action()
		  //# Retrieves the changes history directly from the source code
		  
		  dim f as FolderItem
		  dim data as string
		  dim lines() as string
		  
		  f = GetFolderItem( "About.rbbas" )
		  
		  if f<>nil and f.Exists then
		    data = f.ReadAll( Encodings.UTF8 )
		    data = Trim( data.StringBetween( "#tag Note, Name = Release Notes", "#tag EndNote" ))
		    lines = Split( data, EndOfLine )
		    
		    for i as integer=0 to lines.Ubound
		      lines( i ) = Trim( lines( i ))
		      lines( i ) = lines( i ).ReplaceAll( Chr( 9 ), "" ) //Remove Tabs
		      
		    next
		    
		    data = Join( lines, EndOfLine )
		  end if
		  
		  ChangeHistoryWindow.TA1.Text = data
		  
		End Sub
	#tag EndEvent
	#tag Event
		Sub Open()
		  //# On opening, checks if the file About.rbbas is accessible.
		  
		  dim f as FolderItem
		  
		  f = GetFolderItem( "About.rbbas" )
		  
		  me.Enabled = ( f<>nil and f.Exists )
		  
		  
		End Sub
	#tag EndEvent
#tag EndEvents
